{
	"name": "liquidx",
	"version": "0.1.0",
	"description": "Write Liquid with JSX",
	"type": "module",
	"main": "index.js",
	"engines": {
		"node": ">=24",
		"pnpm": ">=10.10.0"
	},
	"directories": {
		"example": "example"
	},
	"scripts": {
		"test": "node --import tsx --test src/**/*.test.{ts,tsx}",
		"dev": "node --import tsx --test --watch src/**/*.test.{ts,tsx}",
		"playground": "tsx playground.tsx",
		"build": "tsdown",
		"lint": "biome check",
		"lint:fix": "biome check --write",
		"scrape": "tsx scraper.ts",
		"typecheck": "tsc --noEmit"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/stefvw93/bert.git"
	},
	"author": "",
	"license": "ISC",
	"bugs": {
		"url": "https://github.com/stefvw93/bert/issues"
	},
	"homepage": "https://github.com/stefvw93/bert#readme",
	"devDependencies": {
		"@biomejs/biome": "^2.2.2",
		"@shopify/cli": "^3.84.1",
		"@shopify/theme-check-browser": "^3.21.0",
		"@shopify/theme-check-node": "^3.21.0",
		"@types/jsdom": "^21.1.7",
		"@types/node": "^24.3.1",
		"@types/turndown": "^5.0.5",
		"jsdom": "^26.1.0",
		"tsdown": "^0.14.2",
		"tsx": "^4.20.5",
		"turndown": "^7.2.1",
		"typescript": "^5.9.2"
	},
	"dependencies": {
		"@shopify/prettier-plugin-liquid": "^1.10.0",
		"html-jsx": "^1.0.0",
		"prettier": "^3.6.2"
	}
}
