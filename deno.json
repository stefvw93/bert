{
  "$schema": "https://raw.githubusercontent.com/denoland/deno/refs/heads/main/cli/schemas/config-file.v1.json",
  "tasks": {
    "dev": "deno run --watch --allow-sys --allow-env main.tsx"
  },
  "nodeModulesDir": "auto",
  "workspace": ["./lqx"],
  "exclude": ["./dawn", "./theme"],
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "@workspace/lqx",
    "jsxImportSourceTypes": "@workspace/lqx/types"
  },
  "imports": {
    "@shopify/prettier-plugin-liquid": "npm:@shopify/prettier-plugin-liquid@^1.10.0",
    "html-jsx": "npm:html-jsx@^1.0.0",
    "prettier": "npm:prettier@^3.6.2"
  }
}
